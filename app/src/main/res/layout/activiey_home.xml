<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.HomeActivity">

    <Button
        android:id="@+id/home_button_add_task"
        android:layout_width="@dimen/button_diameter"
        android:layout_height="@dimen/button_diameter"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_gravity="bottom|right"
        android:background="@drawable/add_task_button_backgroud"
        android:text="@string/text_home_button_add_task"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:gravity="center"
        style="?android:attr/borderlessButtonStyle"/>

    <TextView
        android:id="@+id/textview_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</FrameLayout>